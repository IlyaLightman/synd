{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["packages/shared/src/*"]
      },
      "rootDir": ".",
      "outDir": "dist"
    },
    "include": ["apps/**/*", "packages/**/*", "prisma"]
}
